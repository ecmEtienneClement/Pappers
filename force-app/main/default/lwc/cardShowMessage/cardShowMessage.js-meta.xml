<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Card Show Custome Message</masterLabel>
    <targets>
        <target>lightning__HomePage</target>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
           
    <targetConfig targets="lightning__HomePage,lightning__FlowScreen">
      <!-- Property for icon-->
          <property
        name="iconCategory"
        label="Icon Category"
        type="String"
        datasource="action:,doctype:,standard:,utility:,custom:"
      />
          <property name="iconName" label="Icon Name" type="String" />
          <property name="iconColor" label="Icon Color" type="String" />
          <property name="iconBg" label="Icon Background" type="String" />

      <!--  Property for theme And message show-->
          <property name="theme" label="Theme Variant" type="String" />
          <property name="message" label="Message" type="String" />

      <!-- Property for padding-->
          <property
        name="paddingVertical"
        label="Vertical padding"
        type="String"
        datasource="
        slds-var-p-vertical_xxx-small,
        slds-var-p-vertical_xx-small,
        slds-var-p-vertical_x-small,
        slds-var-p-vertical_small,
        slds-var-p-vertical_medium,
        slds-var-p-vertical_large,
        slds-var-p-vertical_x-large,
        slds-var-p-vertical_xx-large"
        default="slds-var-p-vertical_xxx-small"
      />
          <property
        name="paddingHorizontal"
        label="Horizontal padding"
        type="String"
        datasource="
        slds-var-p-horizontal_xxx-small,
        slds-var-p-horizontal_xx-small,
        slds-var-p-horizontal_x-small,
        slds-var-p-horizontal_small,
        slds-var-p-horizontal_medium,
        slds-var-p-horizontal_large,
        slds-var-p-horizontal_x-large,
        slds-var-p-horizontal_xx-large"
        default="slds-var-p-horizontal_xxx-small"
      />
      <!-- Property for text-->
       <property name="centerText" label="Text Center" type="Boolean" />
       <property name="bolderText" label="Text Bold" type="Boolean" />
                
      </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
